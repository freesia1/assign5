<div class="container">
    <h3>수정하기</h3>
    <form action="/update/<%= @edit_post.id %>" method="POST" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input name="inputName" id="name" type="text" class="validate" value = <%= @edit_post.editor %> >
        </div>
        <div class="input-field col s12">
          <input name="inputTitle" id="title" type="text" class="validate" value = <% @edit_post.title %>>
        </div>
        <div class="input-field col s12">
          <textarea name="inputContent" id="content" type="text" class="materialize-textarea" value = <% @edit_post.content %>></textarea>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">수정</button>
      </div>
    </form>
</div>








